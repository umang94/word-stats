{
  "name": "content-stats",
  "description": "Extension to generate content stats!",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
  	"service_worker":"scripts/background.js"
  },
  "commands": {
  	"get-selected-text": {
  		"suggested_key": {
  			"default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
  		},
  		"description": "Get selected text description"
  	}
  },
  "permissions": ["storage", "activeTab", "scripting", "tabs"]
}
